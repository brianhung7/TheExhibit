<!DOCTYPE html>
<html lang="en">
<%- include('../partials/_head') %>
    <title>
        The Exhibit
    </title>
    <link rel="stylesheet" href="/styles/splash/splash.css">

    <body>
        <%- include('../partials/_navbar') %>
            <div class="form" style="height:40%">
                <h1 class="mx-5 my-3 form_title">Login</h1>
                <form action="/login" method="POST" id="form__box">
                    <% if (typeof error !=='undefined' ) { %>
                        <article class="message is-danger">
                            <div class="message-header">
                                <p>Danger</p>
                            </div>
                            <div class="message-body">
                                <%= error.message %>
                            </div>
                        </article>
                        <% } %>
                            <div class="form__input">
                                <label for="email">Email Address</label><br />
                                <input type="email" class="input" placeholder="Curator@gmail.com" name="email"
                                    id="email" required>
                            </div>
                            <div class="form__input">
                                <label for="password">Password</label><br />
                                <input type="password" class="input" placeholder="******" name="password" id="password"
                                    required>
                            </div>

                <div class="buttons_container">
                    <button class="form_button">Log In</button>
                </div>
            </div>
            <div class="gallery">
                <div class="clipped-border">
                    <img src="https://i.imgur.com/iYLKFWX.jpeg" id="clipped">
                </div>
                <div class="clipped-border">
                    <img src="https://i.imgur.com/UZhe6Tx.jpeg" id="clipped">
                </div>
                <div class="clipped-border">
                    <img src="https://i.imgur.com/3yoCPY3.jpeg" id="clipped">
                </div>
                <div class="clipped-border">
                    <img src="https://i.imgur.com/cA0BERR.jpeg" id="clipped">
                </div>
                <div class="clipped-border">
                    <img src="https://i.imgur.com/jJiool7.jpeg" id="clipped">
                </div>
                <div class="shadow"></div>
            </div>
    </body>