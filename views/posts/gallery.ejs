<!DOCTYPE html>
<html lang="en">

<%- include('../partials/_head') %>
    <title>
        Gallery
    </title>
    <link rel="stylesheet" href="/styles/posts/gallery.css">

    <body>
        <%- include('../partials/_navbar') %>
            <div class="gallery_container row">
                <div class="user_info_container col">
                    <img src="<%= user.avatar %> " alt="" srcset="" width="150px">
                    <div>
                        <%= user.username %>
                    </div>
                </div>
                <div class="main_posts_container col-8">
                    <% if (searchTerm) { %>
                        Now showing results for "<%= searchTerm %>"
                            <% } %>
                                <% for(let i=0;i<posts.length;i++) {%>
                                    <a href="/gallery/<%= posts[i].id %>">
                                        <div>
                                            <img src="<%= posts[i].image %>" width="250px">
                                        </div>
                                    </a>

                                    <% } %>
                </div>
                <div class="followings_container col">
                    You are Following:
                    <% for (let i=0;i<followings.length;i++) { %>
                        <div>
                            <%= followings[i].username %> 
                        </div>
                        <% } %>
                </div>
            </div>
    </body>