<!DOCTYPE html>
<html lang="en">

<%- include('../partials/_head') %>
    <title>
        New Post
    </title>
    <link rel="shortcut icon" href="/styles/logo.svg">
    <link rel="stylesheet" href="/styles/form.css">

    <body>
        <%- include('../partials/_navbar') %>
            <div class="form__container">
                <h1 class="form__name">New Post</h1>
                <form action="/gallery" method="POST" id="form__box">
                    <% if (typeof error !=='undefined' ) { %>
                        <article class="message is-danger">
                            <div class="message-header">
                                <p>Danger</p>
                            </div>
                            <div class="message-body">
                                <%= error.message %>
                            </div>
                        </article>
                        <% } %>
                            <div class="form__input">
                                <label for="title">Title</label><br />
                                <input maxlength="30" type="text" class="input" placeholder="Mountains" name="title"
                                    id="title">
                            </div>
                            <div class="form__input">
                                <label for="image">Image Link</label><br />
                                <input type="text" class="input" placeholder="Image URL" name="image" id="image">
                            </div>
                            <div class="form__input">
                                <label for="description">Description</label><br />
                                <input maxlength="300" type="text" class="input" placeholder="Description"
                                    name="description" id="description">
                            </div>
                            <div class="form__input">
                                <label for="price">Price</label><br />
                                <input maxlength="300" type="number" class="input" placeholder="$199.99"
                                    name="price" id="price" step="0.01">
                            </div>

                            <fieldset>
                                <legend>Tags</legend>
                                <div class="checkbox">
                                    <% let postTagsArr=["art", "photo" , "landscape" , "beauty" , "fantasy" , "people"
                                        , "drawing" , "painting" , "canvas" , "oil" , "nature" , "life" ]; %>
                                        <% for(let i=0;i<postTagsArr.length;i++){ %>
                                            <div class="tags__class">
                                                <input type="checkbox" id="tags" name="tags"
                                                    value="<%= postTagsArr[i] %>">
                                                <label for="tags">
                                                    <%= postTagsArr[i] %>
                                                </label>
                                            </div>
                                            <% } %>
                                </div>
                            </fieldset>
                            <div>
                                <button class="form__button">Submit New Post</button>
                            </div>

                </form>
            </div>


    </body>

</html>