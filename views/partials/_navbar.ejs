<nav class="navbar" role="navigation" aria-label="main navigation">

    <div class="navbar-brand">
        <a href="/" id="landing__link" class="navbar-item">
            <span class="site__name">The Exhibit </span>
        </a>

    </div>

    <form action="/gallery">
        <div class="searchbar">
            <input id="search_input" type="search" placeholder="Find a post or tag or artpiece" name="q">
            <input type="submit" class="button fa fa-search" id="search__button" value="Search">
        </div>
    </form>

    <!-- this will add a link to the new route -->
    <div class="navbar-menu navbar-end">
        <% if (typeof user !=='undefined' ) { %>
            <a class="navbar-item" href="/users/<%= user.id %>">
                <div>
                    <%= user.username %>
                </div>
            </a>
            <% } %>
                <% if (typeof routes !=='undefined' ) { %>
                    <% routes.forEach((route)=> { %>
                        <a class="navbar-item" href="<%= route.href %>">
                            <div>
                                <%= route.title %>
                            </div>
                        </a>
                        <% }) %>
                            <% } %>
    </div>
</nav>